{
	"name": "general-release",
	"description": "Automatic Release Tool for Git repository using bash shell",
	"version": "0.0.9",
	"bin": "bin/bin.js",
	"scripts": {
		"postinstall": "node bin/bin.js install",
		"preuninstall": "node bin/bin.js uninstall"
	},
	"releaseConfig": {
		"config": "./.release.yml",
		"tools": [
			"message-template",
			"message-lint"
		],
		"commitTemplate": "./.commit_template"
	},
	"homepage": "https://github.com/billowz/general-release",
	"author": "Billowz <billowz@hotmail.com>",
	"bugs": {
		"url": "https://github.com/billowz/general-release/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/billowz/general-release.git"
	},
	"keywords": [
		"release",
		"deploy",
		"publish",
		"package",
		"version",
		"tag",
		"changelog",
		"automation",
		"ci",
		"npm",
		"github",
		"appveyor",
		"commit",
		"commitlint"
	],
	"files": [
		"lib",
		"src",
		"plugins",
		"bin",
		"README.md",
		"CHANGELOG.md",
		"LICENSE"
	],
	"private": false,
	"license": "MIT",
	"devDependencies": {},
	"dependencies": {
		"shelljs": "^0.8.3"
	}
}
